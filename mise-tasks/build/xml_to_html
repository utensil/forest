#!/bin/bash
#MISE sources=["output/*.xml", "output/uts-forest.xsl", "output/links.xsl", "output/core.xsl", "output/default.xsl", "output/metadata.xsl", "output/tree.xsl", "output/book.xsl", "output/uts-layout.xsl", "output/latex.xsl", "output/community-overrides.xsl", "output/article.xsl", "output/uts-overrides.xsl", "output/html.xsl"]
#MISE outputs=["output/*.html"]
set -e
for xml in output/*.xml; do
  [ -e "$xml" ] || continue
  xsltproc -o "output/$(basename "$xml" .xml).html" output/uts-forest.xsl "$xml"
done
