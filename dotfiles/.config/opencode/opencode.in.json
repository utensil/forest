{
  "$schema": "https://opencode.ai/config.json",
  "autoshare": false,
  "autoupdate": false,
  "model": "${OPENAI_API_PROVIDER:-github-copilot}/${OPENAI_API_MODEL:-claude-sonnet-4}",
  "provider": {
    "local": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "${OPENAI_API_BASE}"
      },
      "models": {
        "${OPENAI_API_MODEL}": {}
      }
    }
  },
  "mcp": {
    "container-use": {
      "type": "local",
      "command": ["container-use", "stdio"],
      "enabled": true
    }
  }
}
