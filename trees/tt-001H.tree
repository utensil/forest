    &&& \bullet
    \arrow["{\sigma_X}"', curve={height=6pt}, from=1-4, to=3-4]
    \arrow["\fF", from=2-1, to=1-4]
    \arrow["\fG"', from=2-1, to=3-4]
    \arrow["{\sigma_X^{-1}}"', curve={height=6pt}, from=3-4, to=1-4]
\end{tikzcd}
}
}

